extends layout

block content
  h1= title

  ul
    each author in author_list
      li
        a(href=author.url) #{author.name}
        |  #{author.date_of_birth ? '(' + author.birthdate_formatted : ''}#{author.date_of_death ? ' - ' + author.deathdate_formatted + ')' : ''}#{(author.date_of_birth && !author.date_of_death) ? ')' : ''}
    else
      li There are no authors.
